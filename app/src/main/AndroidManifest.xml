<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="as.com.sggpa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.AppLauncherActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.SchoolListActivity"
            android:label="@string/title_school_list"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.TermListActivity"
            android:label="@string/title_term_list"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ModuleListActivity"
            android:label="@string/title_module_list"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AddActivity"
            android:label="@string/title_add"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.GradeSettingActivity"
            android:label="@string/title_grade_setting"
            android:screenOrientation="portrait"/>
    </application>

</manifest>